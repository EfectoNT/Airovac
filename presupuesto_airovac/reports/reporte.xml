<odoo>


        <report
            id="ventas_presupuesto"
            model="sale.order"
            string="Presupuesto / Pedido (en desarrollo)"
            report_type="qweb-pdf"
            name="presupuesto_airovac.ventas_presupuesto"
            file="presupuesto_airovac.ventas_presupuesto"
            print_report_name="'CotizaciÃ³n - %s' % (object.name)"
        />


        <!-- Formato de papel -->
        <record id="paperformat_ventas_presupuesto" model="report.paperformat">
            <field name="name">Formato para ventas presupuesto pedido</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">33</field>
            <field name="margin_bottom">28</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
        </record>



        <!-- Formato ligado al reporte -->
        <record id="presupuesto_airovac.ventas_presupuesto" model="ir.actions.report">
            <field name="paperformat_id" ref="presupuesto_airovac.paperformat_ventas_presupuesto" />
        </record>


</odoo>