
<odoo>
     <data>
          <template id="optional_product_items_inherit" inherit_id="sale_product_configurator.optional_product_items">

               <xpath expr="//div[@class='oe_price']" position="replace">
                    <div class="oe_price" style="white-space: nowrap;"
                                 t-esc="combination_info['price']"
                                 t-options='{
                                     "widget": "monetary",
                                     "display_currency": (pricelist or product).currency_id
                                 }'/>
                </xpath>
               <xpath expr="//p[@class='css_not_available_msg alert alert-warning']" position="after">
                    <!-- your custom code -->
               </xpath>


          </template>
     </data>
</odoo>